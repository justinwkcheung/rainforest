<h1>All Products </h1>

<%= link_to 'Sign Up', new_user_path %> <br />

<%= link_to "Add a new product", new_product_path %>

<% @products.all.each do |p| %>
  <h1><%= p.name %>: $<%= p.formatted_price %> </h1>
  <p> <%= p.description %> </p>
  <p> <%= link_to "#{p.name} Page", product_url(p) %></p>

<% end %>
